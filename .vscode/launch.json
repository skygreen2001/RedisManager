{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // VSCode Debug for Docker
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9100,
            "pathMappings": {
                "/var/www/html/betterlife": "${workspaceFolder}",
            },
            "externalConsole": false,
            "log": true,
            "ignore": [
                "**/vendor/**/*.php"
            ]
        },
        // {
        //     "name": "Listen for XDebug",
        //     "type": "php",
        //     "request": "launch",
        //     "port": 9100
        // },
        {
            "name": "Launch open file",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9100
        }
    ]
}